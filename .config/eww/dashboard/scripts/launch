#!/bin/bash 

EWW=$(which eww)
CFG="${HOME}/.config/eww/dashboard/"

run() {
    ${EWW} -c ${CFG} $1 \ #background \
                            face \
                            system \
                            playerctl \
                            disk \
                            something \
                            poweroff \
                            restart \
                            exit \
                            hibernate \
                            appbar 
}

if [ "$1" = "open" ]; then
    run open-many
elif [ "$1" = "close" ]; then
    run close
fi
